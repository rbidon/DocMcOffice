    <h1>Appointment Card</h1>
    <!-- BUTTON CONTAINER FOR EDIT & DELETE -->
 <div class="buttonContainer">
<!-- DELETE BUTTON -->
<form action="/patient/<%=appt.id%>?_method=DELETE" method="POST">
