    <h1><%=appt.firstName%> </h1>
 <div class="buttonContainer">
<!-- DELETE BUTTON -->
<form action="#>?_method=DELETE" method="POST">
    <button class="rounded-full bg-sky-500 bg-red-600 px-4"><!--<i class="fa-solid fa-x"></i>-->Delete</button> 
    </form>


<!-- EDIT FORM/ Button -->
<form action="#?_method=PUT" method="POST">
