    <label for="date">Date</label>
    <input class="form-input" id="date" name="date" value="<%=appt.date %> " disabled/>
    <label for="reason">Reason</label>
    <textarea class="form-textarea" id="reason" name="reason  rows="4" cols="50"  disabled><%=appt.reason %></textarea>
</form>
</div>
